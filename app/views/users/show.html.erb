<style>
.box1 { 
       background: #f0f0f0; 
      
       padding: 40px; 
       height: 4000px;
        
       margin-top:80px;
       box-shadow: 0 0 10px black ;  }

        .card {
      display:inline-block;
      margin-left:60px;
      margin-top: 100px;
      transition: .5s;
      box-shadow: 0 0 10px black;
      margin-top: 50px;  } 
      .card:hover{
        transform: translate(-10px,-10px);
        box-shadow: 10px 10px 15px ; }

       .userinfo {
              background-color: #d8d8d8;
              width: 300px;
              margin-left: 200px;    
       }
        .info {
    
    padding: 10px;
    word-wrap:break-word;
    display: block;
    margin-left: 100px;

    font-family: 'Anton', sans-serif;
    font-family: 'Play', sans-serif;
    font-size: 30px;
   
     

   }
     

       </style>

     <%= render 'home/style'%>


       <div class="box1">
  <p class='info'><%=t('shUAd.id')%>
  <%= @user.id %>
 </p>
  <P class='info'><%=t('shUAd.email')%>
  <%= @user.email %>
  </P>
  <P class='info'><%=t('shUAd.data')%>
  <%= @user.created_at %>
  </P>
  <P class='info'><%=t('shUAd.data2')%>
  <%= @user.updated_at %>
  </P>

  
      <% @colls = Coll.all%>
      <% @colls.each do |coll| %>
   <div class="card" style="width : 18rem;">
         <% if coll.image.attached?%>
          <img class="card-img-top"<%=image_tag(coll.image)%>
          <% end %>
   <div class="card-body">
          <h5 class="card-title"><%=coll.title%></h5>
          <a class="btn btn-primary"<%= link_to t('shUAd.clsh'), coll_path(coll) %>  </a> 
                    <%=link_to like_coll_path(coll),class: "like", method: :put do %>
           <button type="button" class="btn btn-info" aria-label="left Align">
           <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
           <span class="badge"><%=coll.get_upvotes.size%></span>
           </button>
           <% end %>
             <%=link_to unlike_coll_path(coll),class: "like", method: :put do %>
           <button type="button" class="btn btn-dark" aria-label="left Align">
           <span class="glyphicon glyphicon-thumbs-up glyphicon-align-center" aria-hidden="true"></span>
           <span class="badge"><%=coll.get_downvotes.size%></span>
           </button>
           <% end %>
</div> 
</div>
<%end%>


